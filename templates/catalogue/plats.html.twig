{% extends 'base.html.twig' %}

{% block title %}Hello CatalogueController!
{% endblock %}

{% block body %}
	<div class="contenu">
		<h1 class="fst-italic">Nos Plats</h1>
		<main class="container">
			<div class="row">
				{% for plat in plats %}
					<div class="col-md-6 mb-4">
						<div class="card" id="images" style="width: 18rem;">
							<img src="{{ asset('IMG/food/' ~ plat.image) }}" alt="{{ plat.libelle }}">
							<div class="card-body">
								<h5 class="card-title">{{ plat.libelle }}></h5>
								<p class="card-text">
									{{ plat.description}}</p>
								<p class="content bg-body">
									{{ plat.prix}} euros</p>
							</div>
						</div>
					</div>
					{# $count++; // Incrémentez le compteur
								            // Si vous avez affiché 2 disques, fermez la rangée actuelle et commencez une nouvelle rangée
								            if ($count % 2 == 0) {
								                echo '</div><div class="row">';
								            } #}
					{% if loop.index is even %}
					</div>
					<div class="row">
					{% endif %}
				{% endfor %}
			</div>
		</main>
	{% endblock %}