            <span class="navbar-toggler-icon"></span>
        </button> #}

        <!-- Contenu de la navbar -->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <!-- Liens de navigation -->
                <li class="nav-item pe-4">
                    <a class="btn btn-order rounded-0 active" aria-current="page" href="{{ path('app_accueil') }}" style="color: #fff">Accueil</a>
                </li>
                <li class="nav-item pe-4">
                    <a class="btn btn-order rounded-0 active" href="{{ path('app_categories') }}" style="color: #fff">Catégories</a>
                </li>
                <li class="nav-item pe-4">
                    <a class="btn btn-order rounded-0 active" href="{{ path('app_plats') }}" style="color: #fff">Plats</a>
                </li>
