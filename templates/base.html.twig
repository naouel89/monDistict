                    <a class="btn btn-order rounded-0 active" href="{{ path('app_panier') }}" style="color: #fff">Passer une commande</a>
                </li> #}

                <!-- Lien spécifique au rôle "Chef" -->
                {% if is_granted('ROLE_CHEF') %}
                    <li class="nav-item pe-4">
                        <a class="btn btn-order rounded-0 {% if is_granted('ROLE_CHEF') %}active{% endif %}" href="{{ path('chef_dashboard') }}" style="color: #fff">Chef</a>
                    </li>
                {% endif %}

                <!-- Lien de connexion/déconnexion -->
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item pe-4 pt-2">
                        <a class="nav-link nav-link-custom" href="{{ path('app_logout') }}">Déconnexion</a>
                    </li>
                {% else %}
                    <li class="nav-item pe-4 pt-2">
                        <a class="nav-link nav-link-custom" href="{{ path('app_login') }}" id="monCompteBtn" title="Inscription/Connexion">Connexion</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

