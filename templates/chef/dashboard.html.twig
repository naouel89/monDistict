{% extends 'base.html.twig' %}

{% block title %}
    Tableau de bord du Chef
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Tableau de bord du Chef</h1>

        {# Ajouter un formulaire pour ajouter un nouveau plat #}
        <div class="mt-4">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            <div class="form-group">
                {{ form_row(form.libelle, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.prix, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.categorie, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.active, {'attr': {'class': 'form-check-input'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form._token) }}
            </div>
            <button type="submit" class="btn btn-primary">Ajouter un plat</button>
            {{ form_end(form) }}
        </div>

        {# Afficher tous les plats existants #}
        <div class="mt-5">
            <h2>Tous les plats</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Libelle</th>
                        <th>Description</th>
                        <th>Prix</th>
                        <th>Categorie</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {# Boucle sur tous les plats pour les afficher dans le tableau #}
                    {% for plat in plats %}
                        <tr>
                            <td>{{ plat.libelle }}</td>
                            <td>{{ plat.description }}</td>
                            <td>{{ plat.prix }} euros</td>
                            <td>{{ plat.categorie.libelle }}</td>
                            <td>
                                <a href="{{ path('modifier_plat', { id: plat.id }) }}" class="btn btn-warning">Modifier</a>
                                <a href="{{ path('supprimer_plat', { id: plat.id }) }}" class="btn btn-danger">Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
